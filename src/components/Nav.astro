<header class="nav-bar">
    <div class="nav-container">
        <div class="nav-logo">
            <a href="/" class="nav-name" style="text-decoration:none;">
                Muller Jean-José
            </a>
        </div>
        <button class="mobile-menu-toggle" aria-label="Menu">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </button>
        <nav class="nav-menu">
            <ul class="nav-link">
                <li><a href="/">Accueil</a></li>
                <li><a href="/about">À propos</a></li>
                <li><a href="/works">Projets</a></li>
                <li>
                    <a href="/#contact" class="contact-btn">Contact</a>
                </li>
            </ul>
        </nav>
    </div>
</header>

<script>
    // Toggle mobile menu
    document.addEventListener("DOMContentLoaded", () => {
        const menuToggle = document.querySelector(".mobile-menu-toggle");
        const navMenu = document.querySelector(".nav-menu");
        const body = document.body;

        if (menuToggle && navMenu) {
            menuToggle.addEventListener("click", () => {
                menuToggle.classList.toggle("active");
                navMenu.classList.toggle("active");
                // Prevent body scrolling when menu is open
                body.style.overflow = navMenu.classList.contains("active")
                    ? "hidden"
                    : "";
            });
        }

        // Close menu when clicking outside
        document.addEventListener("click", (e) => {
            if (
                navMenu?.classList.contains("active") &&
                !navMenu.contains(e.target) &&
                !menuToggle?.contains(e.target)
            ) {
                menuToggle?.classList.remove("active");
                navMenu.classList.remove("active");
                body.style.overflow = "";
            }
        });

        // Close menu when clicking on navigation links
        document.querySelectorAll(".nav-link a").forEach((link) => {
            link.addEventListener("click", () => {
                const menu = document.querySelector(".mobile-menu-toggle");
                const nav = document.querySelector(".nav-menu");
                if (menu && nav) {
                    menu.classList.remove("active");
                    nav.classList.remove("active");
                }
            });
        });
    });
</script>

<style>
    .nav-bar {
        padding: 0.5rem 3rem;
        position: fixed;
        width: 100%;
        top: 0;
        left: 0;
        z-index: 1000;
        background-color: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(8px);
        box-shadow: 0 5px 25px rgba(var(--blue-rgb-500), 0.15);
        transition: all 0.4s ease;
    }

    .nav-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0.5rem 0;
    }

    .nav-logo {
        display: flex;
        align-items: center;
    }

    .nav-name {
        font-weight: 700;
        font-size: 1.5rem;
        background: linear-gradient(to right, var(--blue-800), var(--blue-600));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.5px;
    }

    .nav-menu {
        display: flex;
    }

    .nav-link {
        display: flex;
        gap: 2.5rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
        align-items: center;
    }

    .nav-link a {
        font-weight: 500;
        transition: all 0.3s ease;
        position: relative;
        color: var(--blue-700);
        padding: 0.5rem 0;
        font-size: 1.05rem;
    }

    .nav-link a:hover {
        color: var(--blue-900);
    }

    .nav-link a::after {
        content: "";
        position: absolute;
        width: 0;
        height: 2px;
        bottom: 0;
        left: 0;
        background: linear-gradient(to right, var(--blue-600), var(--blue-400));
        transition: width 0.3s ease;
        border-radius: 1px;
    }

    .nav-link a:hover::after {
        width: 100%;
    }

    .contact-btn {
        background: linear-gradient(to right, var(--blue-600), var(--blue-500));
        color: white !important;
        padding: 0.6rem 1.2rem !important;
        border-radius: 8px;
        box-shadow: 0 4px 12px rgba(var(--blue-rgb-500), 0.2);
        transition: all 0.3s ease;
    }

    .contact-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(var(--blue-rgb-500), 0.3);
        filter: brightness(1.05);
    }

    .contact-btn::after {
        display: none !important;
    }

    .mobile-menu-toggle {
        display: none;
        flex-direction: column;
        justify-content: space-between;
        width: 30px;
        height: 21px;
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 0;
        z-index: 11;
    }

    .bar {
        width: 100%;
        height: 3px;
        background-color: var(--blue-700);
        border-radius: 3px;
        transition: all 0.3s ease-in-out;
    } /* Responsive styles */
    @media (max-width: 768px) {
        .mobile-menu-toggle {
            display: flex;
        }

        .nav-menu {
            position: fixed;
            top: 0;
            right: -100%;
            width: 85%;
            max-width: 320px;
            height: 100vh;
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(12px);
            padding: 5rem 1.5rem 2rem;
            transition: all 0.4s cubic-bezier(0.65, 0.05, 0.36, 1);
            box-shadow: -5px 0 30px rgba(var(--blue-rgb-700), 0.15);
            z-index: 10;
            display: flex;
            align-items: flex-start;
            justify-content: flex-start;
            overflow-y: auto;
        }

        .nav-menu.active {
            right: 0;
        }
        .nav-link {
            flex-direction: column;
            align-items: flex-start;
            gap: 1.5rem;
            font-size: 1.1rem;
            width: 100%;
        }

        .nav-link a {
            width: 100%;
            padding: 0.6rem 0;
            border-bottom: 1px solid rgba(var(--blue-rgb-200), 0.3);
            font-weight: 600;
            display: block;
        }

        .contact-btn {
            margin-top: 1.5rem;
            width: 100%;
            text-align: center;
            border: none;
            padding: 0.8rem 1rem !important;
        }
        .mobile-menu-toggle.active .bar:nth-child(1) {
            transform: translateY(9px) rotate(45deg);
            background: linear-gradient(
                to right,
                var(--blue-800),
                var(--blue-600)
            );
        }

        .mobile-menu-toggle.active .bar:nth-child(2) {
            opacity: 0;
        }

        .mobile-menu-toggle.active .bar:nth-child(3) {
            transform: translateY(-9px) rotate(-45deg);
            background: linear-gradient(
                to right,
                var(--blue-800),
                var(--blue-600)
            );
        }
    }

    @media (max-width: 576px) {
        .nav-bar {
            padding: 0.4rem 1.2rem;
        }

        .nav-name {
            font-size: 1.2rem;
        }

        .mobile-menu-toggle {
            width: 28px;
            height: 20px;
        }

        .bar {
            height: 2.5px;
        }
    }

    @media (max-width: 360px) {
        .nav-bar {
            padding: 0.3rem 1rem;
        }

        .nav-name {
            font-size: 1.1rem;
        }
    }
</style>
