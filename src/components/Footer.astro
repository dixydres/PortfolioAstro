<style>
    .footer {
        background: linear-gradient(135deg, var(--blue-900), var(--blue-800));
        color: white;
        padding: 8rem 3rem 2rem;
        position: relative;
        margin-top: 0;
    }

    .footer-container {
        max-width: var(--max-width);
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .footer-content {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 3rem;
        margin-bottom: 2.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 2.5rem;
    }
    .footer-logo h3 {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 0.7rem;
        background: linear-gradient(to right, white, var(--blue-200));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .footer-logo h3 span {
        background: linear-gradient(to right, var(--blue-300), var(--blue-400));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        transition: all 0.3s ease;
    }

    .footer-logo:hover h3 span {
        background: linear-gradient(to right, var(--blue-400), var(--blue-500));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .footer-logo p {
        color: var(--blue-200);
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }

    .footer-divider {
        width: 50px;
        height: 3px;
        background: linear-gradient(90deg, var(--blue-400), var(--blue-300));
        margin-top: 1rem;
        border-radius: 2px;
    }

    .footer-links {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2.5rem;
    }

    .footer-links-column h4 {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        font-weight: 600;
        color: var(--blue-100);
        position: relative;
        display: inline-block;
    }

    .footer-links-column h4::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -8px;
        width: 30px;
        height: 2px;
        background: var(--blue-400);
        border-radius: 1px;
    }

    .footer-links-column ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-links-column li {
        margin-bottom: 1rem;
        position: relative;
        padding-left: 1rem;
    }

    .footer-links-column li::before {
        content: "";
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: var(--blue-400);
        opacity: 0.6;
        transition: all 0.3s ease;
    }

    .footer-links-column li:hover::before {
        opacity: 1;
        transform: translateY(-50%) scale(1.2);
    }

    .footer-links-column a {
        color: var(--blue-200);
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 1rem;
        position: relative;
    }

    .footer-links-column a::after {
        content: "";
        position: absolute;
        width: 0;
        height: 1px;
        bottom: -2px;
        left: 0;
        background: linear-gradient(90deg, var(--blue-400), transparent);
        transition: width 0.3s ease;
    }

    .footer-links-column a:hover {
        color: white;
    }

    .footer-links-column a:hover::after {
        width: 100%;
    }

    .footer-social {
        display: flex;
        gap: 1.2rem;
        margin-top: 0.5rem;
    }

    .footer-social a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        color: white;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .footer-social a::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, var(--blue-500), var(--blue-600));
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: -1;
    }

    .footer-social a:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        color: white;
    }

    .footer-social a:hover::before {
        opacity: 1;
    }
    .footer-copyright {
        text-align: center;
        padding-top: 1.5rem;
        color: var(--blue-300);
        font-size: 0.9rem;
    }

    .footer-copyright span {
        color: var(--blue-500);
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .footer-copyright:hover span {
        color: var(--blue-700);
    }
    @media (max-width: 992px) {
        .footer {
            padding-top: 5rem;
            padding-bottom: 1.5rem;
        }

        .footer-wave {
            top: -70px;
        }

        .footer-wave svg {
            height: 70px;
        }
    }

    @media (max-width: 768px) {
        .footer {
            padding: 4.5rem 1.8rem 1.5rem;
        }

        .footer-content {
            grid-template-columns: 1fr;
            gap: 2.5rem;
        }

        .footer-links {
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }

        .footer-logo {
            text-align: center;
        }

        .footer-logo h3 {
            font-size: 1.6rem;
        }

        .footer-divider {
            margin: 1rem auto 0;
        }

        .footer-links-column h4 {
            margin-bottom: 1.5rem;
        }

        .footer-social {
            justify-content: center;
            margin-top: 1rem;
        }
    }
    @media (max-width: 576px) {
        .footer {
            padding: 4rem 1.2rem 1.5rem;
        }

        .footer-wave {
            top: -50px;
        }

        .footer-wave svg {
            height: 50px;
        }

        .footer-content {
            gap: 2rem;
            padding-bottom: 2rem;
        }

        .footer-links {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .footer-links-column h4 {
            font-size: 1.1rem;
            text-align: center;
        }

        .footer-links-column h4::after {
            left: 50%;
            transform: translateX(-50%);
            width: 40px;
        }

        .footer-links-column ul {
            text-align: center;
        }

        .footer-links-column li {
            padding-left: 0;
        }

        .footer-links-column li::before {
            display: none;
        }

        .footer-copyright {
            font-size: 0.8rem;
        }
    }

    @media (max-width: 360px) {
        .footer {
            padding: 3.5rem 1rem 1.5rem;
        }

        .footer-logo h3 {
            font-size: 1.4rem;
        }

        .footer-logo p {
            font-size: 0.9rem;
        }
    }
</style>
