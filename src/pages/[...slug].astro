---
import { getCollection } from "astro:content";
import { type CollectionEntry } from "astro:content";
import ProjectLayout from "../layouts/ProjectLayout.astro";
import Basic from "../layouts/Basic.astro";

export async function getStaticPaths() {
    const posts = await getCollection("works");
    const blogPosts = await getCollection("blog");

    // Combine works and blog paths
    return [
        ...posts.map((post) => ({
            params: { slug: `works/${post.slug}` },
            props: { type: "work", post },
        })),
        ...blogPosts.map((post) => ({
            params: { slug: `blog/${post.slug}` },
            props: { type: "blog", post },
        })),
    ];
}

type Props = {
    post: CollectionEntry<"works"> | CollectionEntry<"blog">;
    type: "work" | "blog";
};

const { post, type } = Astro.props;
const { Content } = await post.render();

const returnPath =
    type === "work"
        ? `${import.meta.env.BASE_URL}/works`
        : `${import.meta.env.BASE_URL}/blog`;
const returnText = type === "work" ? "Retour aux projets" : "Retour au blog";
---

{
    type === "work" ? (
        <ProjectLayout {...post.data}>
            <Content />
        </ProjectLayout>
    ) : (
        <Basic title={post.data.title}>
            <article class="blog-post">
                <div class="blog-hero">
                    {post.data.heroImage && (
                        <img src={post.data.heroImage} alt={post.data.title} />
                    )}
                    <h1>{post.data.title}</h1>
                    <div class="blog-meta">
                        <time datetime={post.data.pubDate.toISOString()}>
                            {post.data.pubDate.toLocaleDateString("fr-FR", {
                                year: "numeric",
                                month: "long",
                                day: "numeric",
                            })}
                        </time>
                        {post.data.tags && (
                            <div class="blog-tags">
                                {post.data.tags.map((tag: string) => (
                                    <span class="tag">{tag}</span>
                                ))}
                            </div>
                        )}
                    </div>
                </div>

                <div class="blog-content">
                    <Content />
                </div>

                <div class="blog-navigation">
                    <a href={returnPath} class="back-button">
                        ‚Üê {returnText}
                    </a>
                </div>
            </article>
        </Basic>
    )
}

<style>
    .blog-post {
        max-width: 65ch;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .blog-hero {
        margin-bottom: 2rem;
    }

    .blog-hero img {
        width: 100%;
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .blog-hero h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .blog-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 2rem;
        font-size: 0.9rem;
        color: #666;
    }

    .blog-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tag {
        background: #f0f0f0;
        padding: 0.2rem 0.6rem;
        border-radius: 4px;
    }

    .blog-content {
        line-height: 1.7;
        color: #333;
    }

    .blog-content :global(h2) {
        font-size: 1.8rem;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
    }

    .blog-content :global(h3) {
        font-size: 1.4rem;
        margin-top: 2rem;
        margin-bottom: 0.8rem;
    }

    .blog-content :global(p) {
        margin-bottom: 1.25rem;
    }

    .blog-content :global(ul),
    .blog-content :global(ol) {
        margin-left: 1.5rem;
        margin-bottom: 1.25rem;
    }

    .blog-content :global(li) {
        margin-bottom: 0.5rem;
    }

    .blog-navigation {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid #eee;
    }

    .back-button {
        display: inline-block;
        padding: 0.5rem 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .back-button:hover {
        background-color: #f5f5f5;
        border-color: #ccc;
    }
    @media (max-width: 768px) {
        .blog-hero h1 {
            font-size: 2rem;
        }

        .blog-post {
            padding: 1.5rem 1rem;
        }
    }

    @media (max-width: 480px) {
        .blog-hero h1 {
            font-size: 1.8rem;
        }

        .blog-meta {
            flex-direction: column;
            gap: 0.8rem;
        }

        .blog-content :global(h2) {
            font-size: 1.5rem;
        }

        .blog-content :global(h3) {
            font-size: 1.2rem;
        }

        .blog-post {
            padding: 1rem;
        }
    }
</style>
