---
import { getCollection } from "astro:content";
import Basic from "../layouts/Basic.astro";
import Prose from "../components/Prose.astro";

// À propos page content
---

<Basic title="À propos | Jean-José Muller">
    <!-- Hero Section avec un design moderne -->
    <div class="about-hero">
        <div class="about-hero-content">
            <h1 data-aos="fade-up">À propos de moi</h1>
            <div class="about-divider" data-aos="fade-up" data-aos-delay="100">
            </div>
            <p class="about-subtitle" data-aos="fade-up" data-aos-delay="200">
                Découvrez mon parcours, mes compétences et mes ambitions
            </p>
        </div>
        <div class="hero-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
        </div>
    </div>

    <section class="about-section page-section">
        <div class="about-header" data-aos="fade-up">
            <div class="about-image-container">
                <div class="about-image-border"></div>
                <div class="about-image">
                    <img
                        src={`${import.meta.env.BASE_URL}Muller_Photo.jpeg`}
                        alt="Jean-José Muller"
                    />
                </div>
                <div class="about-image-dot dot-1"></div>
                <div class="about-image-dot dot-2"></div>
                <div class="about-image-dot dot-3"></div>
            </div>

            <div class="about-intro">
                <h2>Jean-José <span class="text-gradient">Muller</span></h2>
                <p class="subtitle">
                    Étudiant dans les métiers du multimédia et de l'internet
                </p>
                <div class="social-links">
                    <a
                        href="https://www.linkedin.com/in/jean-jos%C3%A9-muller-892b91276/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="social-btn"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                        >
                            <path
                                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                            ></path>
                        </svg>
                        <span>LinkedIn</span>
                    </a>
                    <a
                        href="https://www.instagram.com/jj_mlr/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="social-btn"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                        >
                            <path
                                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                            ></path>
                        </svg>
                        <span>Instagram</span>
                    </a>
                    <a
                        href="https://github.com/dixydres"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="social-btn"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                        >
                            <path
                                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                            ></path>
                        </svg>
                        <span>GitHub</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="about-content" data-aos="fade-up">
            <div class="about-card main-card">
                <div class="section-title">
                    <h3>Mon parcours</h3>
                    <div class="title-line"></div>
                </div>

                <p>
                    Actuellement en 2ème année, je suis à la recherche d'un
                    stage dans le domaine du webdesign. Passionné par la
                    création numérique et le développement web, j'ai choisi de
                    me former aux métiers du multimédia pour pouvoir combiner
                    mes compétences créatives et techniques.
                </p>

                <div class="section-title">
                    <h3>Mes compétences</h3>
                    <div class="title-line"></div>
                </div>

                <div class="skills-grid">
                    <div class="skill-card">
                        <div class="skill-icon design-icon">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path d="M12 20h9"></path><path
                                    d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"
                                ></path>
                            </svg>
                        </div>
                        <h4>Design</h4>
                        <ul>
                            <li>UI/UX Design</li>
                            <li>Figma</li>
                            <li>Adobe Creative Suite</li>
                        </ul>
                    </div>

                    <div class="skill-card">
                        <div class="skill-icon dev-icon">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <polyline points="16 18 22 12 16 6"
                                ></polyline><polyline points="8 6 2 12 8 18"
                                ></polyline>
                            </svg>
                        </div>
                        <h4>Développement</h4>
                        <ul>
                            <li>HTML, CSS</li>
                            <li>JavaScript</li>
                            <li>WordPress</li>
                        </ul>
                    </div>

                    <div class="skill-card">
                        <div class="skill-icon other-icon">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path
                                    d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"
                                ></path>
                                <path
                                    d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1-3-3h7z"
                                ></path>
                            </svg>
                        </div>
                        <h4>Autres</h4>
                        <ul>
                            <li>Communication visuelle</li>
                            <li>Gestion de projet</li>
                        </ul>
                    </div>
                </div>

                <div class="section-title">
                    <h3>Mon approche</h3>
                    <div class="title-line"></div>
                </div>

                <div class="approach-content">
                    <div class="approach-text">
                        <p>
                            J'aborde chaque projet avec une vision globale, en
                            cherchant à comprendre les besoins et les objectifs
                            avant de proposer des solutions créatives et
                            fonctionnelles. J'accorde une grande importance à
                            l'expérience utilisateur et au design inclusif.
                        </p>
                    </div>
                    <div class="approach-visual">
                        <div class="approach-step">
                            <div class="step-number">1</div>
                            <div class="step-text">Analyse des besoins</div>
                        </div>
                        <div class="approach-step">
                            <div class="step-number">2</div>
                            <div class="step-text">Conception créative</div>
                        </div>
                        <div class="approach-step">
                            <div class="step-number">3</div>
                            <div class="step-text">Développement</div>
                        </div>
                    </div>
                </div>

                <div class="section-title">
                    <h3>Objectifs professionnels</h3>
                    <div class="title-line"></div>
                </div>

                <p>
                    À court terme, je souhaite approfondir mes compétences en
                    webdesign à travers un stage formateur. À plus long terme,
                    j'ambitionne de travailler dans une agence créative ou en
                    tant que freelance pour accompagner les entreprises dans
                    leur transformation digitale.
                </p>
                <div class="cv-download">
                    <a
                        href={`${import.meta.env.BASE_URL}CV Muller Jean-José.pdf`}
                        class="download-button"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                            ></path>
                            <polyline points="7 10 12 15 17 10"></polyline>
                            <line x1="12" y1="15" x2="12" y2="3"></line>
                        </svg>
                        Télécharger mon CV
                    </a>
                </div>
            </div>
        </div>
    </section>

    <style>
        /* Hero section avec dégradé bleu */
        .about-hero {
            background: linear-gradient(
                135deg,
                var(--blue-900) 0%,
                var(--blue-700) 100%
            );
            color: white;
            padding: 8rem 2rem 6rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .about-hero-content {
            position: relative;
            z-index: 2;
            max-width: 800px;
            margin: 0 auto;
        }

        .about-hero h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            letter-spacing: -0.5px;
        }

        .about-divider {
            width: 80px;
            height: 4px;
            background: linear-gradient(
                90deg,
                var(--blue-400),
                var(--blue-200)
            );
            margin: 0 auto 1.5rem;
            border-radius: 2px;
        }

        .about-subtitle {
            font-size: 1.3rem;
            opacity: 0.9;
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.6;
        }

        /* Formes décoratives dans le hero */
        .hero-shapes .shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.15;
        }

        .shape-1 {
            top: -100px;
            right: -50px;
            width: 300px;
            height: 300px;
            background: var(--blue-200);
            animation: float 10s ease-in-out infinite;
        }

        .shape-2 {
            bottom: -80px;
            left: -80px;
            width: 250px;
            height: 250px;
            background: var(--blue-400);
            animation: float 15s ease-in-out infinite reverse;
        }

        .shape-3 {
            top: 20%;
            left: 20%;
            width: 150px;
            height: 150px;
            background: var(--blue-300);
            animation: float 12s ease-in-out infinite 2s;
        }

        /* Section principale */
        .about-section {
            padding: 5rem 2rem;
            max-width: 1100px;
            margin: 0 auto;
        }

        /* En-tête avec photo de profil */
        .about-header {
            display: flex;
            align-items: center;
            gap: 3.5rem;
            margin-bottom: 4rem;
        }

        .about-image-container {
            flex-shrink: 0;
            position: relative;
            width: 200px;
            height: 200px;
        }

        .about-image {
            position: relative;
            z-index: 2;
            width: 180px;
            height: 180px;
            border-radius: 50%;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(var(--blue-rgb-700), 0.25);
        }

        .about-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
            transition: transform 0.5s ease;
        }

        .about-image:hover img {
            transform: scale(1.05);
        }

        .about-image-border {
            position: absolute;
            top: -10px;
            left: -10px;
            right: -10px;
            bottom: -10px;
            border: 3px solid var(--blue-500);
            border-radius: 50%;
            opacity: 0.3;
        }

        .about-image-dot {
            position: absolute;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background: var(--blue-500);
            z-index: 1;
        }

        .dot-1 {
            top: 15px;
            right: 10px;
            animation: pulse 3s infinite;
        }

        .dot-2 {
            bottom: 20px;
            left: 10px;
            animation: pulse 3s infinite 1s;
        }

        .dot-3 {
            top: 50%;
            right: 0;
            animation: pulse 3s infinite 2s;
        }

        .about-intro {
            flex-grow: 1;
        }

        .about-intro h2 {
            font-size: 2.5rem;
            margin-bottom: 0.75rem;
            font-weight: 700;
        }

        .text-gradient {
            background: linear-gradient(
                90deg,
                var(--blue-600),
                var(--blue-400)
            );
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .subtitle {
            font-size: 1.25rem;
            color: var(--blue-800);
            margin-bottom: 1.5rem;
            opacity: 0.85;
        }

        /* Liens sociaux */
        .social-links {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .social-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.7rem 1.2rem;
            background: white;
            color: var(--blue-800);
            text-decoration: none;
            border-radius: 8px;
            font-weight: 500;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            border: 1px solid rgba(var(--blue-rgb-200), 0.3);
        }

        .social-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(var(--blue-rgb-500), 0.15);
            background: var(--blue-50);
            color: var(--blue-600);
        }

        /* Contenu principal */
        .about-content {
            margin-top: 2rem;
        }

        .main-card {
            background: white;
            border-radius: 16px;
            padding: 3rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
            border: 1px solid rgba(var(--blue-rgb-100), 0.3);
        }

        /* Titres des sections */
        .section-title {
            display: flex;
            align-items: center;
            margin: 2rem 0 1.5rem;
            gap: 1rem;
        }

        .section-title:first-child {
            margin-top: 0;
        }

        .section-title h3 {
            font-size: 1.6rem;
            color: var(--blue-800);
            font-weight: 600;
        }

        .title-line {
            flex-grow: 1;
            height: 3px;
            background: linear-gradient(90deg, var(--blue-300), transparent);
            border-radius: 2px;
        }

        /* Grille de compétences */
        .skills-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin: 2rem 0;
        }

        .skill-card {
            background: var(--blue-50);
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(var(--blue-rgb-200), 0.15);
            transition:
                transform 0.3s ease,
                box-shadow 0.3s ease;
            border: 1px solid rgba(var(--blue-rgb-100), 0.2);
        }

        .skill-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(var(--blue-rgb-400), 0.15);
        }

        .skill-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            border-radius: 10px;
            margin-bottom: 1rem;
            color: white;
        }

        .design-icon {
            background: linear-gradient(135deg, #4e54c8, #8f94fb);
        }

        .dev-icon {
            background: linear-gradient(135deg, #0072ff, #00c6ff);
        }

        .other-icon {
            background: linear-gradient(135deg, #11998e, #38ef7d);
        }

        .skill-card h4 {
            font-size: 1.25rem;
            margin-bottom: 0.75rem;
            color: var(--blue-800);
            font-weight: 600;
        }

        .skill-card ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .skill-card li {
            padding: 0.3rem 0;
            position: relative;
            padding-left: 1.2rem;
            color: var(--blue-700);
        }

        .skill-card li::before {
            content: "•";
            color: var(--blue-500);
            position: absolute;
            left: 0;
            font-weight: bold;
        }

        /* Approche visuelle */
        .approach-content {
            display: flex;
            flex-direction: column;
            gap: 2rem;
            margin: 1.5rem 0;
        }

        .approach-visual {
            display: flex;
            justify-content: space-around;
            gap: 1rem;
        }

        .approach-step {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .step-number {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--blue-600);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.2rem;
            margin-bottom: 0.75rem;
        }

        .step-text {
            color: var(--blue-700);
            font-weight: 500;
        }

        /* Bouton de téléchargement */
        .cv-download {
            margin-top: 3rem;
            text-align: center;
        }

        .download-button {
            display: inline-flex;
            align-items: center;
            gap: 0.7rem;
            padding: 0.9rem 1.8rem;
            background: linear-gradient(
                135deg,
                var(--blue-600),
                var(--blue-500)
            );
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(var(--blue-rgb-500), 0.3);
        }

        .download-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(var(--blue-rgb-500), 0.4);
            filter: brightness(1.1);
        }

        /* Animations */
        @keyframes float {
            0%,
            100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-20px);
            }
        }

        @keyframes pulse {
            0%,
            100% {
                transform: scale(1);
                opacity: 0.6;
            }
            50% {
                transform: scale(1.2);
                opacity: 1;
            }
        } /* Media queries pour responsivité */
        @media (max-width: 900px) {
            .about-header {
                flex-direction: column;
                text-align: center;
                gap: 2.5rem;
            }

            .social-links {
                justify-content: center;
            }

            .approach-visual {
                flex-direction: column;
                gap: 2rem;
            }

            .about-hero h1 {
                font-size: 2.8rem;
            }

            .about-image-container {
                max-width: 280px;
                margin: 0 auto;
            }
        }

        @media (max-width: 768px) {
            .about-hero {
                padding: 7rem 1.5rem 4rem;
            }

            .about-hero h1 {
                font-size: 2.5rem;
            }

            .about-subtitle {
                font-size: 1.1rem;
            }

            .about-section {
                padding: 4rem 1.5rem;
            }

            .main-card {
                padding: 2rem;
            }

            .skills-grid {
                grid-template-columns: 1fr;
            }

            .social-btn span {
                display: none;
            }

            .social-btn {
                padding: 0.7rem;
            }

            .approach-card {
                padding: 1.5rem;
            }
        }

        @media (max-width: 576px) {
            .about-hero {
                padding: 6rem 1.2rem 3rem;
            }

            .about-hero h1 {
                font-size: 2.2rem;
            }

            .about-subtitle {
                font-size: 1rem;
                max-width: 100%;
